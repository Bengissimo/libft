O_FILES = $(C_FILES:.c=.o)

CC = gcc

FLAGS = -c -Wall -Wextra -Werror

all : $(NAME)

$(NAME):
		@$(CC) $(FLAGS) $(C_FILES) 
		@ar rc $(NAME) $(O_FILES)

clean:
	@rm -f $(O_FILES)
 
fclean: clean
	@rm -f $(NAME)

re:	fclean all
